<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    >
    
    <ImageView 
        android:id="@+id/top_return"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:paddingLeft="18dp"
    	android:paddingRight="18dp"
    	android:paddingTop="11dp"
    	android:paddingBottom="11dp"
    	android:layout_centerVertical="true"
    	android:layout_alignParentLeft="true"
    	android:src="@drawable/blue_back"
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_centerInParent="true"
        >
    <TextView 
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="15dp"
    	android:padding="6dp"
    	android:textColor="@color/white"
    	android:background="@drawable/topleft_blue"
    	android:singleLine="true"
    	android:text="@string/recommendjob"
        />
    
    <TextView 
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/topright_white"
    	android:textSize="15dp"
    	android:padding="6dp"
    	android:textColor="@color/top_blue"
    	android:singleLine="true"
    	android:text="@string/authjob"
        />
</LinearLayout>
</RelativeLayout>
