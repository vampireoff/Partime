<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/top_blue"
    >
    
    <ImageView 
        android:id="@+id/top_return"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:padding="15dp"
    	android:layout_centerVertical="true"
    	android:layout_alignParentLeft="true"
    	android:src="@drawable/returnicon"
        />
    
    <TextView 
        android:id="@+id/top_centertext"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="18dp"
    	android:textColor="@color/white"
    	android:layout_centerInParent="true"
    	android:layout_centerVertical="true"
    	android:singleLine="true"
    	android:text="@string/seekregister"
        />
    
    <TextView 
        android:id="@+id/top_righttext"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="14dp"
    	android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:paddingTop="3dp"
    	android:paddingBottom="3dp"
    	android:gravity="center_vertical"
    	android:textColor="@color/white"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:text="@string/collect"
    	android:background="@drawable/stroke_white"
    	android:layout_marginRight="10dp"
    	android:visibility="gone"
        />

</RelativeLayout>
