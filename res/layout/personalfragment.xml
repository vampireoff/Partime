<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:scrollbarStyle="outsideOverlay"
        >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        >
     <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
    	android:layout_marginTop="15dp"
        />
    
    <RelativeLayout 
        android:id="@+id/personalview"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:background="@drawable/listview_back"
    	android:padding="15dp"
        >
        <com.jianzhiniu.views.RoundImageView 
            android:id="@+id/roundimg"
            android:layout_width="60dp"
    		android:layout_height="60dp"
    		android:layout_centerVertical="true"
    		android:background="@color/transparent"
    		android:src="@drawable/default_tx"
    		android:scaleType="centerInside"
    		imagecontrol:border_inside_color="@color/top_blue" 
	        imagecontrol:border_thickness="2dp" 
            />
        
        <ImageView 
            android:id="@+id/toimg"
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/toicon"
			android:scaleType="fitXY"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
        <ImageView 
            android:id="@+id/start"
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/start"
			android:scaleType="fitXY"
			android:layout_toLeftOf="@id/toimg"
			android:layout_marginRight="5dp"
			android:layout_centerVertical="true"
			android:visibility="gone"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:layout_toRightOf="@id/roundimg"
    		android:layout_toLeftOf="@id/start"
    		android:layout_marginLeft="15dp"
    		android:layout_marginRight="5dp"
    		android:layout_centerVertical="true"
            >
            <TextView 
                android:id="@+id/p_name"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="16dp"
    			android:textColor="@color/black"
                />
            <TextView 
                android:id="@+id/p_number"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="16dp"
    			android:textColor="@color/black"
    			android:layout_marginTop="8dp"
                />
            
        </LinearLayout>
    </RelativeLayout>

    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
        />
    
    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
		android:layout_marginTop="15dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/white"
        >
    <RelativeLayout 
        android:id="@+id/collectview"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:background="@drawable/listview_back"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
    	android:visibility="gone"
        >
        <ImageView 
            android:id="@+id/p_img1"
            android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:src="@drawable/assis1"
    		android:scaleType="fitXY"
    		android:layout_centerVertical="true"
            />
        
            <TextView 
                android:id="@+id/p_text1"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="@string/mycollect"
    			android:textSize="17dp"
    			android:textColor="@color/black"
    			android:layout_marginLeft="10dp"
    			android:layout_toRightOf="@id/p_img1"
    			android:layout_centerVertical="true"
                />
            
        <ImageView 
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/toicon"
			android:scaleType="fitXY"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
        </RelativeLayout>
        
    <View 
        android:visibility="gone"
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
		android:layout_marginLeft="65dp"
        />
    <RelativeLayout 
        android:id="@+id/feedbackview"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:background="@drawable/listview_back"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
        >
        <ImageView 
            android:id="@+id/p_img2"
            android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:src="@drawable/feedback"
    		android:scaleType="fitXY"
    		android:layout_centerVertical="true"
            />
        
            <TextView 
                android:id="@+id/p_text2"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="@string/suggestion_feedback"
    			android:textSize="17dp"
    			android:textColor="@color/black"
    			android:layout_marginLeft="10dp"
    			android:layout_toRightOf="@id/p_img2"
    			android:layout_centerVertical="true"
                />
            
        <ImageView 
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/toicon"
			android:scaleType="fitXY"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
        </RelativeLayout>
        </LinearLayout>
        
    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
        />
    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
		android:layout_marginTop="15dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/white"
        >
    <RelativeLayout 
        android:id="@+id/settingview"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:background="@drawable/listview_back"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
        >
        <LinearLayout 
            android:id="@+id/img3lin"
            android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:gravity="center"
    		android:layout_centerVertical="true"
            >
        <ImageView 
            android:id="@+id/p_img3"
            android:layout_width="30dp"
    		android:layout_height="30dp"
    		android:src="@drawable/setting"
    		android:scaleType="fitXY"
            />
        </LinearLayout>
        
            <TextView 
                android:id="@+id/p_text3"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="@string/setting"
    			android:textSize="17dp"
    			android:textColor="@color/black"
    			android:layout_marginLeft="10dp"
    			android:layout_toRightOf="@id/img3lin"
    			android:layout_centerVertical="true"
                />
            
        <ImageView 
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/toicon"
			android:scaleType="fitXY"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
        </RelativeLayout>
        
    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="65dp"
		android:background="@color/gray3"
        />
    
    <RelativeLayout 
        android:id="@+id/checkupdateview"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:background="@drawable/listview_back"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
        >
        
        <LinearLayout 
            android:id="@+id/img4lin"
            android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:gravity="center"
    		android:layout_centerVertical="true"
            >
        <ImageView 
            android:id="@+id/p_img4"
            android:layout_width="38dp"
    		android:layout_height="38dp"
    		android:src="@drawable/update"
    		android:scaleType="fitXY"
            />
        </LinearLayout>
        
            <TextView 
                android:id="@+id/p_text4"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="@string/checkupdate"
    			android:textSize="17dp"
    			android:textColor="@color/black"
    			android:layout_marginLeft="10dp"
    			android:layout_toRightOf="@id/img4lin"
    			android:layout_centerVertical="true"
                />
            
        <ImageView 
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/toicon"
			android:scaleType="fitXY"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
        />
    
    <View 
        android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/gray3"
		android:layout_marginTop="15dp"
        />
    
    <RelativeLayout 
        android:id="@+id/exitview"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:background="@drawable/listview_back"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="15dp"
    	android:paddingRight="15dp"
        >
        <LinearLayout 
            android:id="@+id/exit_linear"
            android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:gravity="center"
    		android:layout_centerVertical="true"
            >
        <ImageView 
            android:id="@+id/exit_img"
            android:layout_width="30dp"
    		android:layout_height="30dp"
    		android:src="@drawable/exit_icon"
    		android:scaleType="fitXY"
            />
        </LinearLayout>
            <TextView 
                android:id="@+id/exit_text"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="@string/exit_account"
    			android:textSize="17dp"
    			android:textColor="@color/red"
    			android:layout_marginLeft="10dp"
    			android:layout_toRightOf="@id/exit_linear"
    			android:layout_centerVertical="true"
                />
            <ImageView 
            android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/toicon"
			android:scaleType="fitXY"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
        </RelativeLayout>
        
        <View 
	        android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/gray3"
			android:layout_marginBottom="15dp"
        />
        </LinearLayout>
        </ScrollView>
</LinearLayout>
