<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_news_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adverheight" >

            <com.jianzhiniu.views.AdBannerView
                android:id="@+id/page_banner_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdgeLength="0.0dp"
                android:keepScreenOn="true"
                android:soundEffectsEnabled="false" />
        </FrameLayout>

        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray3"
            />
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
        <RelativeLayout 
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="8dp"
            android:background="@drawable/listview_back"
            >
            <ImageView 
                android:id="@+id/img1"
                android:layout_width="35dp"
            	android:layout_height="35dp"
            	android:src="@drawable/mainicon1"
            	android:scaleType="fitXY"
            	android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/mto1"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/toicon"
            	android:layout_centerVertical="true"
            	android:layout_alignParentRight="true"
                />
            <TextView 
                android:id="@+id/text1"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/maybeinterest"
            	android:textSize="20dp"
            	android:textStyle="bold"
            	android:textColor="@color/black"
            	android:layout_centerVertical="true"
            	android:layout_toRightOf="@id/img1"
            	android:layout_toLeftOf="@id/mto1"
            	android:ellipsize="end"
            	android:layout_marginLeft="20dp"
                />
            
        </RelativeLayout>
        
        <View 
            android:id="@+id/maingoneline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray3"
            android:layout_marginLeft="75dp"
            />
        
        <RelativeLayout 
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="8dp"
            android:background="@drawable/listview_back"
            >
            <ImageView 
                android:id="@+id/img2"
                android:layout_width="35dp"
            	android:layout_height="35dp"
            	android:src="@drawable/mainicon2"
            	android:scaleType="fitXY"
            	android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/mto2"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/toicon"
            	android:layout_centerVertical="true"
            	android:layout_alignParentRight="true"
                />
            <TextView 
                android:id="@+id/text2"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/nearjob"
            	android:textSize="20dp"
            	android:textStyle="bold"
            	android:textColor="@color/black"
            	android:layout_centerVertical="true"
            	android:layout_toRightOf="@id/img2"
            	android:layout_toLeftOf="@id/mto2"
            	android:ellipsize="end"
            	android:layout_marginLeft="20dp"
                />
            
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray3"
            android:layout_marginLeft="75dp"
            />
        <LinearLayout 
            android:id="@+id/mainlastview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <RelativeLayout 
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="8dp"
            android:background="@drawable/listview_back"
            >
            <ImageView 
                android:id="@+id/img3"
                android:layout_width="35dp"
            	android:layout_height="35dp"
            	android:src="@drawable/mainicon3"
            	android:scaleType="fitXY"
            	android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/mto3"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:src="@drawable/toicon"
            	android:layout_centerVertical="true"
            	android:layout_alignParentRight="true"
                />
            <TextView 
                android:id="@+id/text3"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/newestjobm"
            	android:textSize="20dp"
            	android:textStyle="bold"
            	android:textColor="@color/black"
            	android:layout_centerVertical="true"
            	android:layout_toRightOf="@id/img3"
            	android:layout_toLeftOf="@id/mto3"
            	android:layout_marginLeft="20dp"
            	android:ellipsize="end"
                />
            
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray3"
            android:layout_marginLeft="75dp"
            />
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
</LinearLayout>